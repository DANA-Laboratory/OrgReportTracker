form.card.form.mb-3(ng-if=`getlatestselected('${menuitem}')!==-1`, ng-controller='ReportClassController', ng-init='get({where: getlatestselected("ReportClass")})', ng-hide='hide')
  .card-header.card-primary.text-center= fa[menuitem]['header']
    span.badge.badge-warning.pull-right(ng-if='item.id == undefined')= fa['new']
    button.close(type='button', aria-hidden='true', ng-click='hide=true') Ã—
  .card-block
    .form-group.row
      label.col-1.col-form-label(for='caption')= fa['caption']
      .col-4
        input#caption.form-control(type='text', ng-model='item.caption')
      label.col-1.col-form-label(for='users')= fa['owner']
      .col-3
        input#users.form-control.typeahead(typeahead-directive, bind='user_owner', rowsource="User", type="text", placeholder=`${fa['select owner']}`, style="text-align:right", ng-model='current_owner')
      label.col-1.col-form-label(for='duration')= fa['duration']
      .col-2
        input#duration.form-control(type='text', ng-model='item.duration')
    .form-group.row.small
      .col-3
        label.col-form-label(for='caption_cat_1')= fa['ReportClass']['caption_cat_1']
        input#caption_cat_1.form-control.form-control-sm(type='text', ng-model='item.caption_cat_1')
      .col-3
        label.col-form-label(for='caption_cat_2')= fa['ReportClass']['caption_cat_2']
        input#caption_cat_2.form-control.form-control-sm(type='text', ng-model='item.caption_cat_2')
      .col-3
        label.col-form-label(for='caption_cat_3')= fa['ReportClass']['caption_cat_3']
        input#caption_cat_3.form-control.form-control-sm(type='text', ng-model='item.caption_cat_3')
      .col-3
        label.col-form-label(for='caption_variable')= fa['ReportClass']['caption_variable']
        input#caption_variable.form-control.form-control-sm(type='text', ng-model='item.caption_variable')
    .form-group
      label(for='attribute')= fa['attribute']
      input#attribute.form-control(type='text', ng-model='item.attribute')
    .form-group
  .card-footer
    .d-flex.flex-row-reverse
      .pr-2
        button.btn.btn-success(type='submit')= fa['submit']
          i.fa.fa-check.fa-fw
      .pr-2
        button.btn.btn-warning(type='submit')= fa['create new']
          i.fa.fa-plus.fa-fw
      .pr-2
        button.btn.btn-danger(type='submit')= fa['remove']
          i.fa.fa-remove.fa-fw
