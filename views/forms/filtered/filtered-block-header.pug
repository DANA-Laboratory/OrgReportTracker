.card-header.card-primary
  .row
    .col-2
      span.badge.badge-warning.pull-right(ng-show='newitem')= fa['new']
      span.badge.badge-warning.pull-right(ng-show='changed')= fa['need update']
    .col-8.text-center= fa[menuitem]['header']
      b
        | : {{item.caption}}{{item.account}}
    .col-2
      button.btn.btn-outline-secondary.btn-sm.fa.fa-sort-up.pull-left(ng-hide='!hide', href='', ng-click='hide=false')
      button.btn.btn-outline-secondary.btn-sm.fa.fa-sort-down.pull-left(ng-hide='hide', href='', ng-click='hide=true')
